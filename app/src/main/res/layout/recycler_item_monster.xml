<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/recyclerItemMonster"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:context=".ViewMonstersActivity"
  android:background="#fcca03"
  android:layout_marginBottom="8dp"
  android:padding="8dp">

  <TextView
    android:id="@+id/monsterRecyclerItemNameTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nickname - MonsterType"
    android:textSize="20sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:paddingBottom="8dp"
    />

  <ImageView
    android:id="@+id/monsterRecyclerItemImageView"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:contentDescription="@string/monster_image"
    tools:srcCompat="@tools:sample/avatars[14]"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/monsterRecyclerItemLabelsTextView"
    android:text="@string/view_label_type_health_attack_defense"
    app:layout_constraintStart_toEndOf="@id/monsterRecyclerItemImageView"
    app:layout_constraintTop_toBottomOf="@id/monsterRecyclerItemNameTextView"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="8dp"
    android:gravity="start"
    android:textSize="18sp"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/monsterRecyclerItemStatsTextView"
    android:text="ELECTRIC\n20\n40\n60"
    app:layout_constraintStart_toEndOf="@id/monsterRecyclerItemLabelsTextView"
    app:layout_constraintTop_toBottomOf="@id/monsterRecyclerItemNameTextView"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="8dp"
    android:gravity="start"
    android:textSize="18sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>