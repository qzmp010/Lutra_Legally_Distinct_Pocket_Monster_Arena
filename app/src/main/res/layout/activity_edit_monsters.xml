<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".EditMonstersActivity">

    <Button
      android:id="@+id/returnButton"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginTop="50dp"
      android:layout_marginStart="10dp"
      android:text="@string/back_to_lobby"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/EditMonsterTextView"
      android:layout_width="395dp"
      android:layout_height="50dp"
      android:gravity="center"
      android:text="@string/Edit_monsters"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/returnButton" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/EditMonstersRecyclerView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:padding="2dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/EditMonsterTextView"
      tools:listitem="@layout/recycler_item_monster" />
</androidx.constraintlayout.widget.ConstraintLayout>